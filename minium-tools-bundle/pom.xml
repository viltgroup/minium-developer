<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>io.vilt.minium.tools</groupId>
		<artifactId>minium-tools-parent</artifactId>
		<version>1.4.2-SNAPSHOT</version>
		<relativePath>../minium-tools-parent</relativePath>
	</parent>

	<artifactId>minium-tools-bundle</artifactId>
	<name>Minium Tools - Assembly</name>

	<dependencies>
		<dependency>
			<groupId>io.vilt.minium.tools</groupId>
			<artifactId>minium-automator</artifactId>
		</dependency>
		<dependency>
			<groupId>io.vilt.minium.tools</groupId>
			<artifactId>minium-developer</artifactId>
		</dependency>
	</dependencies>

	<build>
		<finalName>minium-tools</finalName> <!-- If this changes, the file src/main/resources/nativefier/main.js must be updated -->
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-scripts</id>
						<phase>package</phase>
						<goals>
							<goal>assemble</goal>
						</goals>
						<configuration>
							<configurationDirectory>config</configurationDirectory>
							<includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
							<assembleDirectory>${project.build.directory}/${project.build.finalName}</assembleDirectory>
							<extraJvmArguments>-Xms128m -Xmx256m</extraJvmArguments>
							<repositoryLayout>flat</repositoryLayout>
							<repositoryName>lib</repositoryName>
							<useWildcardClassPath>true</useWildcardClassPath>
							<!-- Generate bin scripts for windows and unix by default -->
							<platforms>
								<platform>windows</platform>
								<platform>unix</platform>
							</platforms>
							<programs>
								<program>
									<mainClass>minium.developer.Application</mainClass>
									<name>minium-developer</name>
								</program>
								<program>
									<mainClass>minium.automator.Application</mainClass>
									<name>minium-automator</name>
								</program>
							</programs>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>install node and npm</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>install-node-and-npm</goal>
						</goals>
						<configuration>
							<nodeVersion>v6.9.1</nodeVersion>
						</configuration>
					</execution>
					<execution>
						<id>npm install</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>install</arguments>
						</configuration>
					</execution>
					<execution>
						<id>npm run nativefier-windows</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>run nativefier-windows</arguments>
						</configuration>
					</execution>
					<execution>
						<id>npm run nativefier-linux</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>run nativefier-linux</arguments>
						</configuration>
					</execution>
					<execution>
						<id>npm run nativefier-osx</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>run nativefier-osx</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution> <!-- See #59670 -->
						<id>copy-node-progress-package</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>node_modules/progress/lib</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources/nativefier</directory>
									<includes>
										<include>node-progress.js</include>
									</includes>
								</resource>
							</resources>
							<overwrite>true</overwrite>
						</configuration>
					</execution>
					<execution>
						<id>copy-config</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${project.build.finalName}/config</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources/config</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>minium-developer-bundle-windows</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>Minium-Developer-win32-x64</finalName>
							<descriptors>
								<descriptor>src/assembly/assembly-windows.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
					<execution>
						<id>minium-developer-bundle-linux</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>Minium-Developer-linux-x64</finalName>
							<descriptors>
								<descriptor>src/assembly/assembly-linux.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
					<execution>
						<id>minium-developer-bundle-mac</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>Minium-Developer-osx-x64</finalName>
							<descriptors>
								<descriptor>src/assembly/assembly-mac.xml</descriptor>
							</descriptors>
							<tarLongFileMode>posix</tarLongFileMode>
						</configuration>
					</execution>
					<execution>
						<id>minium-tools-bundle</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>minium-tools-${project.version}</finalName>
							<descriptors>
								<descriptor>src/assembly/assembly.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>cleanup</id>
						<phase>package</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<excludeDefaultDirectories>true</excludeDefaultDirectories>
							<filesets>
								<fileset>
									<directory>target/Minium-Developer-darwin-x64</directory>
								</fileset>
								<fileset>
									<directory>target/Minium-Developer-linux-x64</directory>
								</fileset>
								<fileset>
									<directory>target/Minium-Developer-win32-x64</directory>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
