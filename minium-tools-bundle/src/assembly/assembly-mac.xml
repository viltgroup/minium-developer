<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>assembly-mac</id>

	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/Minium-Developer-darwin-x64</directory>
			<outputDirectory>Minium-Developer-darwin-x64/Minium-Developer.app/Contents/MacOS</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>Minium-Developer.app/Contents/MacOS/Minium-Developer</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/Minium-Developer-darwin-x64</directory>
			<outputDirectory>Minium-Developer-darwin-x64</outputDirectory>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
</assembly>
