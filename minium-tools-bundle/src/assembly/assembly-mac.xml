<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>assembly-mac</id>

	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<files>
		<file>
			<source>${project.build.directory}/Minium-Developer-darwin-x64/LICENSE</source>
			<outputDirectory>/</outputDirectory>
			<destName>Minium-Developer-darwin-x64/LICENSE.electron.txt</destName>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/${project.build.finalName}</directory>
			<outputDirectory>Minium-Developer-darwin-x64/Minium-Developer.app/Contents/minium-tools</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>bin/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/${project.build.finalName}</directory>
			<outputDirectory>Minium-Developer-darwin-x64/Minium-Developer.app/Contents/minium-tools</outputDirectory>
			<excludes>
				<exclude>bin/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/nativefier</directory>
			<outputDirectory>Minium-Developer-darwin-x64/Minium-Developer.app/Contents/Resources/app/lib</outputDirectory>
			<includes>
				<include>main.js</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>Minium-Developer-darwin-x64/Minium-Developer.app/Contents/Resources/app/lib</outputDirectory>
			<includes>
				<include>minium-developer.js</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/loading-page</directory>
			<outputDirectory>Minium-Developer-darwin-x64/Minium-Developer.app/Contents/Resources/app/lib/static</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/Minium-Developer-darwin-x64</directory>
			<outputDirectory>Minium-Developer-darwin-x64</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0755</directoryMode>
			<excludes>
				<exclude>LICENSE</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
